<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CartBuyMedicineActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ðŸ©º24*7 HealthcareðŸ©º"
        android:textAlignment="center"
        android:textColor="#F80303"
        android:textDirection="firstStrongLtr"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBMBPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Deliver Location : PUNE"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="18dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        android:text="Select Date"
        android:textColor="#E9DA6A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBMCartTotalCost" />

    <Button
        android:id="@+id/buttonBMCartDatePicker"
        style="?android:spinnerStyle"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="92dp"
        android:text="27/3/2025"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonBMBBooking"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_bg"
        android:hint="CHECKOUT"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#12C51A"
        android:textColorHint="#FFFFFFFF"
        android:textColorLink="#0048FF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBMCartDatePicker"
        app:layout_constraintVertical_bias="0.187" />

    <Button
        android:id="@+id/buttonBMCartBack"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_bg"
        android:hint="BACK"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#12C51A"
        android:textColorHint="#FFFFFFFF"
        android:textColorLink="#0048FF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBMCartDatePicker"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewBMCartTitle"
        android:layout_width="289dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:text="Lab Test and Packages"
        android:textAlignment="center"
        android:textColor="#A0AD0E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/listViewBMCart"
        app:layout_constraintStart_toStartOf="@+id/listViewBMCart"
        app:layout_constraintTop_toBottomOf="@+id/textViewBMBPackageName" />

    <TextView
        android:id="@+id/textViewBMCartTotalCost"
        android:layout_width="230dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Total Cost : 2000/-"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewBMCart" />

    <EditText
        android:id="@+id/listViewBMCart"
        android:layout_width="328dp"
        android:layout_height="311dp"
        android:layout_marginTop="24dp"
        android:text="hi /n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBMCartTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>